<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingTop="5dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/ivUrl"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:id="@+id/rlHeader"
        android:background="#99c1d7e3"
        android:paddingLeft="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivUser"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvUsername"
            android:textSize="15sp"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@+id/ivUser"
            android:paddingLeft="5dp"
            android:gravity="fill_horizontal|left|fill_vertical"
            android:layout_alignParentTop="true"
            android:paddingTop="6dp"
            android:textColor="#ff1a3d62" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivLike"
            android:src="@drawable/ic_like"
            android:layout_toLeftOf="@+id/tvLikes"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/ivUser"
            android:paddingRight="-10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvLikes"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/ivLike"
            android:gravity="left|fill_vertical"
            android:paddingRight="5dp"
            android:textColor="#ff1a3d62" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCaption"
        android:textSize="12sp"
        android:textIsSelectable="false"
        android:layout_weight="0.08"
        android:paddingBottom="10dp"
        android:layout_below="@+id/ivUrl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>